{
  "name": "echarts-robot",
  "version": "1.0.0",
  "description": "A robot for Apache ECharts issues and pull requests",
  "author": "Ovilia <me@zhangwenli.com> (https://github.com/settings/apps/echarts-robot-dev)",
  "license": "Apache-2.0",
  "repository": "https://github.com/apache/echarts-bot.git",
  "homepage": "https://github.com/apache/echarts-bot",
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "echarts",
    "apache"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@plainheart/google-translate-api": "^1.2.0",
    "bing-translate-api": "^2.9.0",
    "franc-min": "5.0.0",
    "probot": "^12.3.0"
  },
  "devDependencies": {
    "@octokit/graphql-schema": "^13.7.0",
    "jest": "^29.5.0",
    "nock": "^13.3.0",
    "nodemon": "^2.0.21",
    "smee-client": "^1.2.3",
    "standard": "^17.0.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "engines": {
    "node": ">=12"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
